@model IEnumerable<Manitouadge.Models.InvoiceDto>

<h2>Invoices</h2>

@if( Model.Count() == 0 ) {
  <h3 class="mt-5">There are no invoices to view.</h3>
} else {
  <table class="table">
    <tr>
      <th>
        @Html.DisplayNameFor( model => model.invoiceId )
      </th>
      <th>
        @Html.DisplayNameFor( model => model.created )
      </th>
      <th>
        @Html.DisplayNameFor( model => model.status )
      </th>
      <th>
        @Html.DisplayNameFor( model => model.userId )
      </th>
      <th></th>
    </tr>

    @foreach( var item in Model ) {
      <tr>
        <td>
          @Html.DisplayFor( modelItem => item.invoiceId )
        </td>
        <td>
          @Html.DisplayFor( modelItem => item.created )
        </td>
        <td>
          @Html.DisplayFor( modelItem => item.status )
        </td>
        <td>
          @Html.DisplayFor( modelItem => item.userId )
        </td>
        <td>
          @Html.ActionLink( "Details", "Details", new {
            id = item.invoiceId
          } ) |
          @Html.ActionLink( "Delete", "Delete", new {
            id = item.invoiceId
          } )
        </td>
      </tr>
    }

  </table>
}

<div class="m-4 text-right">
  <a class="btn btn-info btn-outline-light my-sm-0" href="/Invoices/Create">New Invoice</a>
</div>
